<div class="container-calendar">
    <div class="years-calendar">Mars 2023</div>
    <div class="content-calendar">
        <div class="numbers-day">
            {% for day in days %}
            <div class="number-day day">{{day}}</div>
            {% endfor %}
            <div class="number-day inactive"></div>
            <div class="number-day inactive"></div>
            {% for i in 1..31 %}
            <div class="number-day {% if i == 19 %}event-formation{% endif %}" {% if i==19
                %}title="Fin d'apprentissage Vialtic.com" {% endif %}>
                {{i}}
                {% if i == 19 %}
                <div class="notif-formation">
                    <span>Fin</span> <span>d'app.</span>
                </div>
                {% endif %}
            </div>
            {% endfor %}
            <div class="number-day inactive"></div>
