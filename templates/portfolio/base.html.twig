    <script src="https://code.jquery.com/jquery-3.6.0.min.js" defer></script>
    <script src="{{ asset(get_path_file_js('loading', env)) }}" defer></script>
    <script src="{{ asset(get_path_file_js('base', env)) }}" defer></script>
    {% block javascripts %}{% endblock %}

    <link rel="icon" type="image/x-icon" href="favicon.ico" />
</head>

<body>
    {% block header %}
    {% endblock %}

    {% block body %}
    {% endblock %}

    {% block footer %}
    {% endblock %}
